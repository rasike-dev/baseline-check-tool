{
  "name": "baseline-check-tool",
  "displayName": "Baseline Check Tool",
  "description": "Comprehensive web compatibility analysis and optimization tool for VS Code",
  "version": "2.4.1",
  "publisher": "rasike-a",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rasike-a/baseline-check.git"
  },
  "homepage": "https://github.com/rasike-a/baseline-check#readme",
  "bugs": {
    "url": "https://github.com/rasike-a/baseline-check/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other",
    "Snippets",
    "Debuggers",
    "Testing"
  ],
  "keywords": [
    "baseline",
    "compatibility",
    "web",
    "browser",
    "performance",
    "optimization",
    "analysis",
    "linting"
  ],
  "activationEvents": [
    "onCommand:baseline-check.scan",
    "onCommand:baseline-check.analyze",
    "onCommand:baseline-check.performance",
    "onCommand:baseline-check.security",
    "onCommand:baseline-check.accessibility",
    "onCommand:baseline-check.seo",
    "onCommand:baseline-check.bundle",
    "onCommand:baseline-check.dashboard",
    "onCommand:baseline-check.monitor",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseline-check.scan",
        "title": "Scan for Baseline Compatibility",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.analyze",
        "title": "Run Full Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.performance",
        "title": "Performance Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.security",
        "title": "Security Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.accessibility",
        "title": "Accessibility Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.seo",
        "title": "SEO Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.bundle",
        "title": "Bundle Analysis",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.dashboard",
        "title": "Open Dashboard",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.monitor",
        "title": "Start Real-time Monitoring",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.stopMonitor",
        "title": "Stop Monitoring",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.fixIssues",
        "title": "Fix Issues Automatically",
        "category": "Baseline Check"
      },
      {
        "command": "baseline-check.generateReport",
        "title": "Generate Report",
        "category": "Baseline Check"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "baseline-check.scan",
          "when": "resourceExtname == '.js' || resourceExtname == '.ts' || resourceExtname == '.jsx' || resourceExtname == '.tsx' || resourceExtname == '.html' || resourceExtname == '.css'",
          "group": "baseline-check"
        },
        {
          "command": "baseline-check.analyze",
          "when": "resourceFolder",
          "group": "baseline-check"
        }
      ],
      "editor/context": [
        {
          "command": "baseline-check.scan",
          "when": "resourceExtname == '.js' || resourceExtname == '.ts' || resourceExtname == '.jsx' || resourceExtname == '.tsx' || resourceExtname == '.html' || resourceExtname == '.css'",
          "group": "baseline-check"
        }
      ],
      "commandPalette": [
        {
          "command": "baseline-check.scan",
          "when": "resourceExtname == '.js' || resourceExtname == '.ts' || resourceExtname == '.jsx' || resourceExtname == '.tsx' || resourceExtname == '.html' || resourceExtname == '.css'"
        },
        {
          "command": "baseline-check.analyze"
        },
        {
          "command": "baseline-check.performance"
        },
        {
          "command": "baseline-check.security"
        },
        {
          "command": "baseline-check.accessibility"
        },
        {
          "command": "baseline-check.seo"
        },
        {
          "command": "baseline-check.bundle"
        },
        {
          "command": "baseline-check.dashboard"
        },
        {
          "command": "baseline-check.monitor"
        },
        {
          "command": "baseline-check.stopMonitor"
        },
        {
          "command": "baseline-check.fixIssues"
        },
        {
          "command": "baseline-check.generateReport"
        }
      ]
    },
    "configuration": {
      "title": "Baseline Check Tool",
      "properties": {
        "baseline-check.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Baseline Check Tool"
        },
        "baseline-check.autoScan": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files on save"
        },
        "baseline-check.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix issues when possible"
        },
        "baseline-check.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for analysis results"
        },
        "baseline-check.includeNodeModules": {
          "type": "boolean",
          "default": false,
          "description": "Include node_modules in analysis"
        },
        "baseline-check.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size to analyze (in bytes)"
        },
        "baseline-check.performance.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable performance analysis"
        },
        "baseline-check.security.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable security analysis"
        },
        "baseline-check.accessibility.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable accessibility analysis"
        },
        "baseline-check.seo.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable SEO analysis"
        },
        "baseline-check.bundle.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable bundle analysis"
        },
        "baseline-check.monitoring.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time monitoring"
        },
        "baseline-check.monitoring.debounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce time for file changes (in milliseconds)"
        }
      }
    },
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx",
          ".mjs",
          ".cjs"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html",
          ".htm"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css",
          ".scss",
          ".sass",
          ".less"
        ]
      }
    ],
    "problemMatchers": [
      {
        "name": "baseline-check",
        "owner": "baseline-check",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "baseline-check",
        "required": [],
        "properties": {
          "command": {
            "type": "string",
            "description": "The baseline-check command to run"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the command"
          },
          "options": {
            "type": "object",
            "description": "Additional options"
          }
        }
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "html",
        "path": "./snippets/html.json"
      },
      {
        "language": "css",
        "path": "./snippets/css.json"
      }
    ],
    "views": {
      "baseline-check": [
        {
          "id": "baseline-check-results",
          "name": "Analysis Results",
          "when": "baseline-check.hasResults"
        },
        {
          "id": "baseline-check-performance",
          "name": "Performance",
          "when": "baseline-check.performance.enabled"
        },
        {
          "id": "baseline-check-security",
          "name": "Security",
          "when": "baseline-check.security.enabled"
        },
        {
          "id": "baseline-check-accessibility",
          "name": "Accessibility",
          "when": "baseline-check.accessibility.enabled"
        },
        {
          "id": "baseline-check-seo",
          "name": "SEO",
          "when": "baseline-check.seo.enabled"
        },
        {
          "id": "baseline-check-bundle",
          "name": "Bundle",
          "when": "baseline-check.bundle.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "baseline-check",
          "title": "Baseline Check",
          "icon": "$(check-all)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node scripts/build.js && npm run compile && npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "webpack --mode production",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "baseline-check-tool": "^2.3.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "ora": "^5.4.1"
  }
}
